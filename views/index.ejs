<%- include ('partials/head.ejs') %>
<% if(notif == 'success') { %>
    <%- include('partials/message.ejs') %>
<% } %>
<h1 class="text-center">Our App</h1>
<a href="/add" class="btn btn-success">Add</a>
<table class="table">
    <thead>
        <tr>
            <th>ID</th>
            <th>Title</th>
            <th>Country</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        <% data.forEach(d => { %>
        <tr>
            <td><%= d.ID %></td>
            <td><%= d.Title %></td>
            <td><%= d.Country %></td>
            <td>
                <a href="/edit/<%= d.ID %>" class="text-white">
                    <button type="button" class="btn btn-primary">Edit</button>
                </a>
            </td>
        </tr>
        <% }) %>
    </tbody>
</table>
<%- include ('partials/footer.ejs') %>